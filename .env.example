# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Runi University Credentials
# Your Runi login credentials
RUNI_USERNAME=your_username_here
RUNI_PASSWORD=your_password_here

# Database Configuration
DATABASE_PATH=../database/grades.db

# Selenium Configuration
# Maximum number of retry attempts before giving up
MAX_RETRY_ATTEMPTS=3
# Wait time between retries in seconds
RETRY_DELAY=30
# Check interval for new grades in seconds (recommended: 300-900)
CHECK_INTERVAL=300
# WebDriver wait timeout in seconds
WEBDRIVER_TIMEOUT=20
